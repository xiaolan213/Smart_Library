<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/ly_temp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_login"
>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
                android:background="@drawable/temphumicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:padding="10dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:textColor="@color/OrangeRed"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="阅览区"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                    android:background="@drawable/tempicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.robinhood.ticker.TickerView
                    android:textStyle="bold"
                    android:textColor="@color/CornflowerBlue"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textSize="12dp"
                    android:id="@+id/ticker_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                    android:background="@drawable/humicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.robinhood.ticker.TickerView
                    android:textStyle="bold"
                    android:textColor="@color/CornflowerBlue"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textSize="12dp"
                    android:id="@+id/ticker_hum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                    android:background="@drawable/luxicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.robinhood.ticker.TickerView
                    android:textStyle="bold"
                    android:textColor="@color/CornflowerBlue"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:id="@+id/ticker_lux"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>