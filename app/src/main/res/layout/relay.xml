<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/ly_relay"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
                android:background="@drawable/controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:padding="10dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:textColor="@color/Crimson"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="控制"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gif_fan"
                    android:background="@drawable/fan_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

           <!-- <android.support.v7.widget.AppCompatImageView
                    android:background=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>-->

            <com.example.xiaolan.myapplication.SwitchButton
                    android:id="@+id/switch_fan"
                    android:layout_marginLeft="15dp"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>



        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_lampclose"
                    android:background="@drawable/lamp_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.example.xiaolan.myapplication.SwitchButton
                    android:id="@+id/switch_light"
                    android:layout_marginLeft="15dp"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>